<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/timricis_lgn"
        android:src="@drawable/timriciss"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/login_email"
        app:layout_constraintTop_toBottomOf="@id/timricis_lgn"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email"
        app:layout_constraintTop_toBottomOf="@id/login_email"
        android:layout_marginTop="8dp"
        android:background="@color/background"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/login_psw"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/psw"
        app:layout_constraintTop_toBottomOf="@id/login_psw"
        android:layout_marginTop="8dp"
        android:background="@color/background"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnlogin"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/psw"
        android:text="LOGIN"
        android:background="@color/Colorbtnkategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bertanya"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnlogin"
        android:text="@string/belum_punya_akun"
        android:textColor="@color/cardview_dark_background"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btndaftar"
        android:layout_marginTop="8dp"
        android:text="REGISTRASI"
        app:layout_constraintTop_toBottomOf="@id/bertanya"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@color/bgtentang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>