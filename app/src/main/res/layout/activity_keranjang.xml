<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg6"
    tools:context=".KeranjangActivity">

    <ImageView
        android:id="@+id/timricis"
        android:src="@drawable/timriciss"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/text_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Pesanan"
        android:textSize="20dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintTop_toBottomOf="@id/timricis"/>

    <TextView
        android:id="@+id/tv_nama"
        android:text="Nama Lengkap "
        app:layout_constraintTop_toBottomOf="@id/text_judul"
        android:textColor="@color/hitam"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_tlp"
        android:text="Nomor Telepon"
        app:layout_constraintTop_toBottomOf="@id/et_nama"
        android:textColor="@color/hitam"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_tlp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tlp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_alamat"
        android:text="Alamat Lengkap"
        app:layout_constraintTop_toBottomOf="@id/et_tlp"
        android:textColor="@color/hitam"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/pesanan"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_alamat"
        android:text="Katalog : "
        android:textColor="@color/hitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/isi_pesanan"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_alamat"
        app:layout_constraintLeft_toRightOf="@id/pesanan"
        android:textColor="@color/hitam"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/warna"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pesanan"
        android:text="Warna : "
        android:textColor="@color/hitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/isi_warna"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pesanan"
        app:layout_constraintLeft_toRightOf="@id/warna"
        android:layout_marginLeft="10dp"
        android:textColor="@color/hitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/jml"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/warna"
        android:text="Jumlah : "
        android:textColor="@color/hitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/isi_jml"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/warna"
        app:layout_constraintLeft_toRightOf="@id/jml"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:textColor="@color/hitam"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ukuran"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/jml"
        android:text="Total Bayar : "
        android:textColor="@color/hitam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/isi_ukuran"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/jml"
        app:layout_constraintLeft_toRightOf="@id/ukuran"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:textColor="@color/hitam"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_cekout"
        android:text="Checkout"
        android:background="@color/bgtentang"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>